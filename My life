<body>
  <div class="card">
    <div class="ring"></div>
    <h1>My Forever ❤️</h1>
    <div class="typing" id="typing"></div>
    <a class="btn" href="#" onclick="showMore()">Tap to Feel My Love</a>
    <div class="footer">— Yours, Always</div>
  </div>

  <script>
    // Customize names & message here
    const wifeName = 'My Love'; // change to her name
    const lines = [
      `To ${wifeName},`,
      'Every heartbeat whispers your name.',
      'You are my today, my tomorrow, my forever.',
      'No matter where life takes us, my love only grows.'
    ];

    let lineIndex = 0, charIndex = 0;
    const typingEl = document.getElementById('typing');

    function typeLine() {
      if (lineIndex >= lines.length) return;
      if (charIndex < lines[lineIndex].length) {
        typingEl.innerHTML += lines[lineIndex].charAt(charIndex);
        charIndex++;
        setTimeout(typeLine, 45);
      } else {
        typingEl.innerHTML += '<br/>';
        lineIndex++; charIndex = 0;
        setTimeout(typeLine, 400);
      }
    }
    typeLine();

    function showMore() {
      alert('I love you more than words can ever say. ❤️');
    }

    // Create floating hearts
    function spawnHeart() {
      const h = document.createElement('div');
      h.className = 'heart';
      h.style.left = Math.random() * 100 + 'vw';
      const size = 10 + Math.random() * 18;
      h.style.width = h.style.height = size + 'px';
      h.style.animationDuration = 6 + Math.random() * 6 + 's';
      document.body.appendChild(h);
      setTimeout(() => h.remove(), 12000);
    }
    setInterval(spawnHeart, 500);
  </script>
</body>
</html>
